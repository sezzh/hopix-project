.btn
  font-size rem-calc(16)
  font-family font-primary-normal
  padding rem-calc(10)
  background-color gray-base-darker
  border 0
  border-radius rem-calc(4)
  color text-light-primary-color
  &--form
    background-color accent-color
  &--nav-menu
    box-sizing padding-box
    padding rem-calc(8)
    text-align center
    height rem-calc(60)
    width rem-calc(60)
    font-size rem-calc(44)
    border-radius 0
    background-color transparent
    &:active
      background-color primary-color
  &--nav-option
    padding rem-calc(5)
    margin rem-calc(7.5)
    width rem-calc(45)
    height rem-calc(45)
    background-color rgba(144,144,144,.5)
    box-sizing border-box
    border-radius 50%
    box-shadow 0 0 rem-calc(10) shadow-dark-color
    &:active
      background-color primary-color
    &:nth-child(odd)
      margin-right 0
    &:last-child
      margin-right rem-calc(7.5)
      margin-left 0
  &--login
    background-color transparent
    color primary-color
    text-decoration underline
    font-size rem-calc(17)
    &:active
      background-color accent-color

.btn-round
  color text-light-icons-color
  background-color accent-color
  box-sizing padding-box
  border-radius 50%
  width rem-calc(60)
  height rem-calc(60)
  border 0
  box-shadow 0 0 rem-calc(20) shadow-dark-color
  &:active
    background-color primary-color
  &--fixed
    position fixed
    bottom rem-calc(18)
    right rem-calc(18)
    z-index 3
  &__icon
    text-align center
    font-size rem-calc(26)
